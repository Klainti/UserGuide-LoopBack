'use strict';

class Catalog {
  CreateList(buffer) {
    const list = [];
    let type;

    for (let i = 0; i < buffer.length; i++) {
      if (buffer[i].data) {
        type = 'md';
      } else {
        type = 'folder';
      }
      list.push({ id: buffer[i].id, name: buffer[i].name, type });
    }
    return list;
  }
}

module.exports = Catalog;
